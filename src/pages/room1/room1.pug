extends ../layout

append style
  link(rel='stylesheet' href=require('./room1.scss'))
append script
  //- script(src=require('./chart.js'))
  script(src=require('./room1.js'))
//- include ../mixins
block content
  //- h1 Hello World!

  include ../../modules/header/header
  main.room__main-content
    .room__wrapper 
      //- .room__img-wrap
      //-   img.room__img-1(src=require("../../assets/images/1room1.png"))
      //-   img.room__img-2(src=require("../../assets/images/1room1-2.png"))
      //-   img.room__img-3(src=require("../../assets/images/1room1-3-1.png"))
      .room__details
        .room__additionally-and-doughnut
          .room__additionally
            h2.room__additionally-title Сведения о номере
            +additionally({title: "Комфорт", text: "Шумопоглощающие стены", ico: 'insert_emoticon'})
            +additionally({title: "Удобство", text: "Окно в каждой из спален", ico: 'location_city'})
            +additionally({title: "Уют", text: "Номер оснащён камином", ico: 'whatshot'})
          .room__doughnut_wrap
            h2.room__doughnut-title Впечатления от номера
            .room__doughnut
              +doughnut-chart
              ul.room__room-votes-list 
                        li.room__room-votes-item.room__room-votes-item_color_orange Великолепно
                        li.room__room-votes-item.room__room-votes-item_color_green Хорошо
                        li.room__room-votes-item.room__room-votes-item_color_purple Удовлетворительно
                        li.room__room-votes-item.room__room-votes-item_color_black Разочарован

        .room__comments
          h2.room__comments-title Отзывы посетителей номера
          +comment({name: 'Мурад Сарафанов', 
              date: "5 дней назад", 
              text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",  
              avatarSrc: 'Images/avatar.png',
              alt: "avatar",
              like: {id: "10", count: 12, liked: true}})
          +comment({name: 'Патрисия Стёклышкова', 
              date: "Неделю назад", 
              text: "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент", 
              avatarSrc: 'Images/avatar2.png',
              alt: "avatar",
              like: {id: "11", count: 2, liked: false}})
        .room__bullet-list
          .room__bullet-list-left
            h2.room__bullet-list-title.title-right Правила
            +bulletList({ 
                items: [{text: "Нельзя с питомцами"}, 
                {text: "Без вечеринок и мероприятий"}, 
                {text: "Время прибытия — после 13:00, а выезд до 12:00"}]})
          .room__bullet-list-right
            h2.room__bullet-list-title Отмена
            span.room__bullet-list-text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
        .room__info
          +roomInfo({num: '888', 
                  luxe: true, 
                  price: 9990, 
                  date: 4,
                  leftValueDate: '19.08.2019',
                  rightValueDate: '23.08.2019',
                  values: [0,0,0]
                  })
    .room__line

  include ../../modules/footer/footer
   
   
