mixin registerButton({text, link, hover=false, arrow=false, classReg}={})
  .button-form(action=link)
    button(type="button" class="register-button" class=hover ? 'reg-btn-hover' : '' class=arrow ? 'btn-arrow' : '' class=classReg) 
      h3= text
mixin enterButton({text, link, hover=false, width100=false}={})
  .button-form(action=link)
    button(type="submit" class='enter-button' class=hover ? 'btn-hover' : '' class=width100 ? 'btn-w100' : '') 
      h3= text
mixin textButton({text, active=false}={})
  button(type="button" class="text-button" class=active ? 'btn-active' : '')
    h3= text